<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NCalendar">
        <attr name="solarTextColor" format="color" />
        <attr name="lunarTextColor" format="color" />
        <attr name="solarHolidayTextColor" format="color" />
        <attr name="lunarHolidayTextColor" format="color" />
        <attr name="solarTermTextColor" format="color" />
        <attr name="selectCircleColor" format="color" />
        <attr name="selectSolarTextColorColor" format="color" />
        <attr name="selectLunarTextColor" format="color" />
        <attr name="todaySolarTextColor" format="color" />
        <attr name="todaySolarSelectTextColor" format="color" />
        <attr name="solarTextSize" format="dimension" />
        <attr name="lunarTextSize" format="dimension" />
        <attr name="lunarDistance" format="dimension" />
        <attr name="holidayTextSize" format="dimension" />
        <attr name="holidayDistance" format="dimension" />
        <attr name="selectCircleRadius" format="dimension" />
        <attr name="isShowLunar" format="boolean" />


        <attr name="pointSize" format="dimension" />
        <attr name="pointDistance" format="dimension" />
        <attr name="pointColor" format="color" />

        <attr name="hollowCircleColor" format="color" />
        <attr name="hollowCircleStroke" format="dimension" />

        <attr name="disabledString" format="string" />

        <attr name="calendarHeight" format="dimension" />
        <attr name="stretchCalendarHeight" format="dimension" />
        <attr name="duration" format="integer" />

        <attr name="alphaColor" format="integer" />
        <attr name="disabledAlphaColor" format="integer" />


        <attr name="isShowHoliday" format="boolean" />
        <attr name="isAllMonthSixLine" format="boolean" />
        <attr name="holidayColor" format="color" />
        <attr name="workdayColor" format="color" />
        <attr name="todaySelectContrastColor" format="color" />
        <attr name="disabledColor" format="color" />
        <attr name="bgCalendarColor" format="color" />


        <attr name="defaultCalendar" format="enum">
            <enum name="week" value="100" />
            <enum name="month" value="101" />
        </attr>

        <attr name="pointLocation" format="enum">
            <enum name="up" value="200" />
            <enum name="down" value="201" />
        </attr>

        <attr name="firstDayOfWeek" format="enum">
            <enum name="sunday" value="300" />
            <enum name="monday" value="301" />
        </attr>

        <attr name="holidayLocation" format="enum">
            <enum name="top_right" value="400" />
            <enum name="top_left" value="401" />
            <enum name="bottom_right" value="402" />
            <enum name="bottom_left" value="403" />
        </attr>

        <attr name="stretchTextSize" format="dimension" />
        <attr name="stretchTextDistance" format="dimension" />
        <attr name="stretchTextColor" format="color" />


        <attr name="isShowNumberBackground" format="boolean" />
        <attr name="numberBackgroundTextSize" format="dimension" />
        <attr name="numberBackgroundTextColor" format="color" />
        <attr name="numberBackgroundAlphaColor" format="integer" />

    </declare-styleable>
</resources>